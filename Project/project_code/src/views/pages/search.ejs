<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Google Books Search</title>
</head>

<body>
  <h1>Google Books Search</h1>

  <form action="/search" method="post">
    <label for="query">Query:</label>
    <input type="query" id="search" name="search" required>
    <label for="selectCategory">Search Type</label>
    <select id="selectCategory" name="selectCategory">
      <option value="title" selected>Title</option>
      <option value="author">Author</option>
      <option value="genre">Genre</option>
    </select>

    <label for="numResults">Search Type</label>
    <select id="numResults" name="numResults">
      <option value="10" selected>10</option>
      <option value="20">20</option>
      <option value="30">30</option>
    </select>
    <button type="submit">Search</button>
  </form>

  <h2>Search Results</h2>

  <% if (books.length> 0) { %>
    <ul>
      <% books.forEach(book=> { %>
        <li>
          <% if (book.volumeInfo.imageLinks) { %>
            <img src="<%= book.volumeInfo.imageLinks.thumbnail %>" alt="Cover">
            <% } else { %>
              <p>No thumbnail available</p>
              <% } %>

                <strong>
                  <%= book.volumeInfo.title %>
                </strong> by <%= book.volumeInfo.authors.join(', ') %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No results found.</p>
    <% } %>
  </body>
  
</html>