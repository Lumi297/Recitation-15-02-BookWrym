    <!-- Actual Search Output -->

    <% if (books.length> 0) { %>
    <div class="results">
      <div class="row">    
        <% books.forEach(book=> { %>
        <div class="col">                 
          <a href="/bookPage/<%= encodeURIComponent(book.id) %>" class="box-part">
            <% if (book.volumeInfo.imageLinks) { %>             
            <img src="<%= book.volumeInfo.imageLinks.thumbnail %>" alt="Cover">
            <% } else { %>
            <img src="https://static.vecteezy.com/system/resources/previews/004/141/669/non_2x/no-photo-or-blank-image-icon-loading-images-or-missing-image-mark-image-not-available-or-image-coming-soon-sign-simple-nature-silhouette-in-frame-isolated-illustration-vector.jpg" alt="Cover"></i>
            <% } %>
            <div class="text-box">
              <div class="title">
                <% if (book.volumeInfo.title) {%>
                <h4><%= book.volumeInfo.title %></h4>
                <% } else {%>
                <h4>Untitled</h4>
                <% } %>
              </div>
            </div>
            <div class="author">
              <p><%= book.volumeInfo.authors.join(', ') %></p>
            </div>
          </a>     
        </div>
        <% }) %>
      </div>
    </div>
    <% } else { %>
      <p style="text-align: center; padding: 10px 0 10px 0;">No results found.</p>
